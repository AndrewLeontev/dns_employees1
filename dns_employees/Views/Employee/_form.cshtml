@model dns_employees.Models.Employee;
@{ ViewContext.FormContext = new FormContext(); }
<div class="row">
    <div class="col-md-12">
        <div class="card-body">
            @using (Html.BeginForm("AddOrEdit", "Employee", FormMethod.Post, new { onsubmit = "return jQueryAjaxPost(this);" }))
            {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        <input asp-for="Name" class="form-control" />
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Department)
                        <input asp-for="Department" class="form-control" />
                        @Html.ValidationMessageFor(m => m.Department)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Title)
                        <input asp-for="Title" class="form-control" />
                        @Html.ValidationMessageFor(m => m.Title)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Manager_id)
                        @Html.DropDownListFor(m => m.Manager_id, ViewBag.EmployeesList as IEnumerable<SelectListItem>, "...", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label asp-for="Hire_date" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="Hire_date" type="date" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-primary rounded-0">Submit</button>
                    </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}